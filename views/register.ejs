<% include ./partials/header %>

    <div class = row>
        <div class="col-lg-12">
                 <!-- Traffic sources -->
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h1 class="panel-title">Add Doctor</h1>
                        <div class="heading-elements">
                            <span><i class="icon-bell2"></i></span>
                        </div>
                    </div>
                <div class="container-fluid">
            <div class="row">                                        
        <div class="col-lg-12">
                    <!-- Registration form -->
                    <form action="/register" method = "post">
                        <div class="row">
                            <div class="col-lg-6 col-lg-offset-3">
                                <div class="panel registration-form">
                                    <div class="panel-body">
                                        <div class="text-center">
                                            <!-- <div class="icon-object border-success text-success"> --><img height="120" width="150" src="assets/images/logo/logo.png"><!-- </div> -->
                                            <h5 class="content-group-lg">Create Doctor's account</h5>
                                        </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group has-feedback">
                                            <input type="email" class="form-control" placeholder="Username" name = "username" required>
                                            <div class="form-control-feedback">
                                                <!-- <i class="icon-user-plus text-muted"></i> -->
                                                <span class = "fa fa-envelope"></span>
                                            </div>
                                        </div>

                                    </div>
<!--                                </div>      
                                        <div class="row"> -->
                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <input type="text" class="form-control" placeholder="Name" name = "name" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-user-check text-muted"></i> -->
                                                            <i class = "fa fa-user "></i>
                                                    </div>
                                                </div>
                                            </div>

                                            
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <input type="password" class="form-control" placeholder="Create password" name = "password" pattern=".{6,}"  title="Six or more characters" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-user-lock text-muted"></i> -->
                                                        <span class = "fa fa-unlock-alt "></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <input class="form-control" placeholder="Contact Number" type="text" name = "num" pattern=".{11,}"  title="11 Numbers minimum" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-user-telephone2 text-muted"></i> -->
                                                        <span class="icon-phone"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <input class="form-control" placeholder="Age" type="number" name = "age" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-mention text-muted"></i> -->
                                                        <i class="fa fa-list" aria-hidden="true"></i>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <input type="text" class="form-control" placeholder="CNIC" name = "cnic" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-mention text-muted"></i> -->
                                                        <i class="fa fa-id-card-o" aria-hidden="true"></i>
                                                        

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class = "row">
                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <input type="text" class="form-control" placeholder="Qualification" name = "qualification" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-mention text-muted"></i> -->
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group has-feedback">
                                                    <select class = "form-control" name = "gender ">
                                                        <option value = "Not Defined" >Select Gender</option>
                                                        <option value = "Male" >Male</option>
                                                        <option value = "Female" >Female</option>
                                                    </select>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-mention text-muted"></i> -->
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group has-feedback">
                                                    <input type="text" class="form-control" placeholder="Description" name = "description" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-user-plus text-muted"></i> -->
                                                        <i class="fa fa-globe" aria-hidden="true"></i>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group has-feedback">
                                                    <input type="text" class="form-control" placeholder="Hospital Address" name = "specialization" required>
                                                    <div class="form-control-feedback">
                                                        <!-- <i class="icon-user-plus text-muted"></i> -->
                                                        <i class="fa fa-globe" aria-hidden="true"></i>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>                                        
                                        <div class ="form-group">
                                            <label>
                                                <p>By clicking you agree to our <a href="#">terms</a>  and <a href="#"> services</a></p>
                                            </label>
                                        </div>  
                                        <div class="text-right">
                                            <a class="btn btn-link" href = "/login"><i class="icon-arrow-left13 position-left"></i> Back to login form</a>
                                            <button type="submit" class="btn bg-teal-400 btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b> Create account</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                            </div>
                        </div>
                    </div>                             
                <div class="position-relative" id=""></div>
            </div>
            <!-- /traffic sources -->
        </div>
    </div>
                    <!-- /registration form -->
    <!-- /page container -->
<% include ./partials/footer %>