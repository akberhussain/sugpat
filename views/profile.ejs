<% include ./partials/header %>

                    <!-- Main charts -->
                    <div class="row">
                       <% if(currentUser&&(currentUser.id != admin)){ %>
                              <div class="col-md-12">

                            <!-- Traffic sources -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h1 class="panel-title">Basic Information</h1>
                                    <div class="heading-elements">
                                        <span><i class="icon-bell2"></i></span>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="row">
                                        

                                        <div class="col-lg-12">
                                            <table class = "table table-striped table-bordered table-hover table-responsive box-shadow-table">

                                                <thead class = "thead-inverse">
                                                    <tr><th><h5>Name</h5></th><td><strong><%= currentUser.name %></strong></td></tr>
                                                    <tr><th><h5>Email</h5></th><td><strong><%= currentUser.username %></strong></td></tr>
                                                    <tr><th><h5>CNIC  No</h5></th><td><strong><%= currentUser.cnic %></strong></td></tr>
                                                    <tr><th><h5>Age</h5></th><td><strong><%= currentUser.age %></strong></td></tr>
                                                    <tr><th><h5>Gender</h5></th><td><strong><%= currentUser.gender %></strong></td></tr>
                                                    <tr><th><h5>Address</h5></th><td><strong><%= currentUser.address %></strong></td></tr>
                                                    <tr><th><h5>Blood Group</h5></th><td><strong><%= currentUser.bloodgroup %></strong></td></tr>
                                                    <tr><th><h5>Mobile No</h5></th><td><strong><%= currentUser.num %></strong></td></tr>
                                                    <tr><th><h5>Drug History</h5></th><td><strong><%= currentUser.drughistory %></strong></td></tr>
                                                    <tr><th><h5>Diabetes Duration</h5></th><td><strong><%= currentUser.diabetesduration %></strong></td></tr>
