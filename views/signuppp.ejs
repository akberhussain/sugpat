<div class = "container " style = "margin-top: 35px;">
    <div class = "row">
         <div  style = "width: 30%; margin: 0 auto">
            <div class = "jumbotron jspecial" style = "border-radius: 20px;">
                <div class = "centered">
                    <img align = "middle" class = "logo" src="assets/my_assets/logo.png">
                </div>
                <form action = "/signup" method = "post"> 
                    <h4 align = "center"><strong>Create Account</strong></h4>   
                     <div class = "form-group">
                     	<h4>Username</h4>
                        <input class = "form-control" type="text" name = "username" >
                     </div>
                     <div class = "form-group">
                        <h4>Name</h4>
                        <input class = "form-control" type="text" name = "name" >
                     </div>
                     <div class = "form-group">
                        <h4>CNIC No</h4>
                        <input class = "form-control" type="text" name = "cnic" >
                     </div>
                     
                        <div class = "form-group">
                     	    <h4>Password</h4>
                            <input class = "form-control" type="password" name = "password" pattern=".{6,}"  title="Six or more characters">
                        </div>
                     <div class = "form-group">
                        <h4>Mobile No</h4>
                        <input class = "form-control" type="text" name = "num" pattern=".{11,}"  title="11 Numbers minimum" >
                     </div>
                     <div class = "form-group">
                        <h4>Age</h4>
                        <input class = "form-control" type="number" name = "age" pattern=".{2,}">
                     </div>
                     <div class = "form-group">
                        <h4>Address</h4>
                        <input class = "form-control" type="text" name = "address">
                     </div>
                     <div class = "form-group">
                        <h4>Gender</h4>
                        <select name = "gender" class = "btn btn-block">
                            <option value = "Not Defined" >Select</option>
                            <option value = "Male" >Male</option>
                            <option value = "Female" >Female</option>
                        </select>
                     </div>
                     <div class = "form-group">
                        <h4>Blood Group</h4>
                        <select name = "bloodgroup" class = "btn btn-block">
                            <option value = "Not Defined" >Select</option>
                            <option value = "A+" >A+</option>
                            <option value = "A-" >B-</option>
                            <option value = "B+" >B+</option>
                            <option value = "B-" >B-</option>
                            <option value = "O+" >O+</option>
                        </select>
                     </div>

                     <div class = "form-group">
                        <input class = "btn btn-lg btn-primary btn-block" type = "submit" value  = "Create Account"> 
                     </div>
                     
                     <div>
                        <p class = "terms">By clicking "Create Account", you agree to our <a href="#">Terms & Conditions </a>and <a href="#">Privacy Policy</a></p>
