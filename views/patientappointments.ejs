<% include ./partials/header %>


                                     <div class="row">
                        <div class="col-lg-12">

                            <!-- Traffic sources -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h1 class="panel-title">Schedule</h1>
                                    <div class="heading-elements">
                                        <span><i class="icon-bell2"></i></span>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="row">
                                        

                                        <div class="col-lg-12">
                                            <table class = "table table-striped table-bordered table-hover table-responsive box-shadow-table">

                                                <thead class = "thead-inverse">
                                                    <tr>
                                                        <th><h5>Doctor</h5></th>
                                                        <th><h5>Date</h5></th>
                                                        <th><h5>Time</h5></th>
                                                    </tr>
                                                     <% appointments.forEach(function(appointment){ %>
                                                    <% if(currentUser && appointment.patient2.id.equals(currentUser._id)){ %>
                                                    
                                                    <tr>
                                                        <td><h4><a href="/doctor<%= appointment.doctor2.id %>"><%= appointment.doctor2.name1 %></a></h4></td>
                                                        <td><h5><%= appointment.appointmentdate %></h5></td>
                                                        <td><strong style = " font-size: 18px;"><%= appointment.appointmenttime1 %> - <%= appointment.appointmenttime2 %></strong></td>
                                                    </tr>
                                                        
                                                        <% } %>
                                                     <% }); %>

                                                </thead>
                                                <tbody>
                                                    <tr></tr>
                                                </tbody>    
                                            </table>

                                        </div>

                                    </div>
                                </div>

                                <div class="position-relative" id=""></div>
                            </div>
                            <!-- /traffic sources -->
                        </div>
                    </div>   

<% include ./partials/footer %>
       