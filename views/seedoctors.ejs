<% include ./partials/header %>


                                     <div class="row">
                        <div class="col-lg-12">

                            <!-- Traffic sources -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                        <h1 class="panel-title">Schedule of <%= doc.name %></h1>
                                    <div class="heading-elements">
                                        <span><i class="icon-bell2"></i></span>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="row">
                                        

                                        <div class="col-lg-12">
                                            <table class = "table table-striped table-bordered table-hover table-responsive box-shadow-table">

                                                <thead class = "thead-inverse">
                                                    <tr>
                                                        <th><h5>Date</h5></th>
                                                        <th><h5>Time</h5></th>
                                                        <th><h5>Appointment</h5></th>
                                                    </tr>
                                                     <% schedule.forEach(function(schd){ %>
                                                    <% if(currentUser && schd.author.id.equals(did)){ %>
                                                        
                                                    
                                                    <tr>
                                                        <td><h5><%= schd.date %></h5></td>
                                                        <td><strong style = " font-size: 18px;"><%= schd.time1 %> - <%= schd.time2 %></strong></td>
                                                        <% if(schd.time1 == schd.time2){ %>
                                                            <% var button = 'danger' %>   
                                                            <% var url = '#' %>   
                                                            <% var appointment = 'Slot Full' %>   
                                                        <% } %>

                                                    <% if(schd.time1 != schd.time2){ %>
                                                        <% button = 'success' %>   
                                                        <% url = 'appointment'+schd.id+'/'+currentUser._id+'/'+schd.author.id %>   
                                                        <% appointment = 'Take Appointment' %>   
                                                    <% } %>

                                                        <td><strong><a class = "btn btn-<%= button %>" href="<%= url %>"><%= appointment %></a></strong></td>
                                                    </tr>
                                                        
                                                        <% } %>
                                                     <% }); %>

                                                </thead>
                                                <tbody>
                                                    <tr></tr>
                                                </tbody>    
                                            </table>

                                        </div>

                                    </div>
                                </div>

                                <div class="position-relative" id=""></div>
                            </div>
                            <!-- /traffic sources -->
                        </div>
                    </div>   

<% include ./partials/footer %>
