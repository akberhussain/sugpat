												<div class="form-group has-feedback">
													<input type="text" class="form-control" placeholder="Name" name = "name">
													<div class="form-control-feedback">
														<!-- <i class="icon-user-check text-muted"></i> -->
															<i class = "fa fa-user "></i>
													</div>
												</div>
											</div>

											
										</div>

										<div class="row">
											<div class="col-md-6">
												<div class="form-group has-feedback">
													<input type="password" class="form-control" placeholder="Create password" name = "password" pattern=".{6,}"  title="Six or more characters">
													<div class="form-control-feedback">
														<!-- <i class="icon-user-lock text-muted"></i> -->
														<span class = "fa fa-unlock-alt "></span>
													</div>
												</div>
											</div>

											<div class="col-md-6">
												<div class="form-group has-feedback">
													<input class="form-control" placeholder="Contact Number" type="text" name = "num" pattern=".{11,}"  title="11 Numbers minimum">
													<div class="form-control-feedback">
														<!-- <i class="icon-user-telephone2 text-muted"></i> -->
														<span class="icon-phone"></span>
													</div>
												</div>
											</div>
										</div>

										<div class="row">
											<div class="col-md-6">
												<div class="form-group has-feedback">
													<input class="form-control" placeholder="Age" type="number" name = "age">
													<div class="form-control-feedback">
														<!-- <i class="icon-mention text-muted"></i> -->
														<i class="fa fa-list" aria-hidden="true"></i>

													</div>
												</div>
											</div>

											<div class="col-md-6">
												<div class="form-group has-feedback">
													<input type="text" class="form-control" placeholder="CNIC" name = "cnic">
													<div class="form-control-feedback">
														<!-- <i class="icon-mention text-muted"></i> -->
														<i class="fa fa-id-card-o" aria-hidden="true"></i>
														

													</div>
												</div>
											</div>
										</div>

										<div class = "row">
											<div class="col-md-6">
												<div class="form-group has-feedback">
													<select class = "form-control" name = "bloodgroup">
														<option value = "Not Defined" >Blood Group</option>
							                            <option value = "A+" >A+</option>
							                            <option value = "A-" >A-</option>
							                            <option value = "B+" >B+</option>
							                            <option value = "B-" >B-</option>
							                            <option value = "O+" >O+</option>
													</select>
													<div class="form-control-feedback">
														<!-- <i class="icon-mention text-muted"></i> -->
													</div>
												</div>
											</div>

											<div class="col-md-6">
												<div class="form-group has-feedback">
													<select class = "form-control" name = "gender">
														<option value = "Not Defined" >Select Gender</option>
							                            <option value = "Male" >Male</option>
							                            <option value = "Female" >Female</option>
													</select>
													<div class="form-control-feedback">
														<!-- <i class="icon-mention text-muted"></i> -->
													</div>
												</div>
											</div>

										</div>
										<div class="row">
											<div class="col-md-12">
												<div class="form-group has-feedback">
													<input type="text" class="form-control" placeholder="Address" name = "address">
