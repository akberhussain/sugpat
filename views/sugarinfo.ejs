<% include ./partials/header %>
		
		 <div class="row">
                        <div class="col-lg-10">

                            <!-- Traffic sources -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h1 class="panel-title">Sugar Level</h1>
                                    <div class="heading-elements">
                                        <span><i class="icon-bell2"></i></span>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="row">
                                        

                                        <div class="col-lg-12">
                                            <table class = "table table-striped table-bordered table-hover table-responsive box-shadow-table">

                                                <thead class = "thead-inverse">
                                                	<% add = 0 %>
                                                	<% count = 0 %>
                                                	 <% sugarlevel.forEach(function(sugarl){ %>
                                                	<% if(currentUser && sugarl.user.id.equals(currentUser._id)){ %>
                                                    
                                                    <tr><th><h5><%= sugarl.date1 %></h5></th><td><strong style = " font-size: 18px;"><%= sugarl.sugarLevel %></strong></td></tr>
                                                    <% add += sugarl.sugarLevel %>
                                                    <% count++ %>
                                                    
                                                     	<% } %>
                                                     <% }); %>

                                                    <tr><th><h5><strong>Average</strong></h5></th><td><strong style = " font-size: 18px;"><%= add/count %></strong></td></tr>

                                                </thead>
                                                <tbody>
                                                    <tr></tr>
                                                </tbody>    
                                            </table>

                                        </div>

                                    </div>
                                </div>

                                <div class="position-relative" id=""></div>
                            </div>
                            <!-- /traffic sources -->
                        </div>
                    </div>   


<% include ./partials/footer %>
