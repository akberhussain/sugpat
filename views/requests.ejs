<% include ./partials/header %>
    <% foundRequest.forEach(function(request){ %>


        <div class="row">
      <div class="col-lg-12">

                            <!-- Traffic sources -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h1 class="panel-title">Appointment Request</h1>
                                    <div class="heading-elements">
                                        <span><i class="icon-bell2"></i></span>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="row">
                                        

                                        <div class="col-lg-12">
                                            <table class = "table table-striped table-bordered table-hover table-responsive box-shadow-table">

                                                 <thead class = "thead-inverse">
                                                  
                                                    <tr><th><h5>Doctor</h5></th><td> <a href="/doctor<%= request.doctor.id %>"> <%= request.doctor.username4 %></a></td></tr>
                                                    <tr><th><h5>Patient</h5></th><td> <a href="/patient<%= request.patient.id %>"> <%= request.patient.username3 %></a></strong></td></tr>
                                                    <tr><th><h5>Date</h5></th><td><strong><%= request.d %></strong></td></tr>
                                                    <tr><th><h5>Time</h5></th><td><strong><%= request.t1 %> - <%= request.t2 %></strong></td></tr>
                                                    <tr><th><h5>React</h5></th>
                                                      <td>
                                                      
                                                        <form action = "/appointment<%= request.availableid %>/<%= request.doctor.id %>/<%= request.patient.id %>" method = "post" style = "display: inline;">
                                                          <input class = "btn btn-xs btn-success" type = "submit" value = "accept">
                                                        </form>
                                                      
                                                        <form style = "display: inline;" action = "/appointment/<%= request.id %>?_method=delete" method = "post">
                                                          <input class = "btn btn-xs btn-danger" type = "submit" value = "delete">
                                                        </form>

                                                      </td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr></tr>
                                                </tbody>    
                                            </table>        

                                        </div>

                                    </div>
                                </div>

                                <div class="position-relative" id=""></div>
                            </div>
                            <!-- /traffic sources -->
                        </div>
    </div>  



    <% }); %>

<% include ./partials/footer %> 









 